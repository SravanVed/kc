<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="PropDev-SubmitPage" parent="PropDev-SubmitPage-parentBean" />
	<bean id="PropDev-SubmitPage-parentBean" abstract="true"
		parent="Uif-DocumentPage">
		<property name="items">
			<list merge="false">
				<bean parent="Uif-HeaderOne" p:headerText="Submit" />
				<bean parent="Uif-StepProgressBar" p:order="20" >
              <property name="currentStep" value="@{document.developmentProposal.proposalStateTypeCode}"/>
              <property name="steps">
                     <map>
                     <entry key="1" value="In Progress"/>
                     <entry key="12" value="Revisions Requested"/>
                     <entry key="2|5" value="Pending"/>
                     <entry key="13" value="Approved"/>
                     <entry key="6" value="Approved and Submitted"/>    
                                      
                     </map>
              </property>
       </bean>
				
			</list>
		</property>
		<property name="header">
			<bean parent="Uif-PageHeader" />
		</property>
		<property name="footer">
	 	 <bean  parent="Uif-HorizontalBoxGroup" p:align="left">
			<property name="items">		
				<list>
					<bean  p:actionLabel="Submit for Review" parent="Uif-PrimaryActionButton" p:methodToCall="submitForReview" /> 
					<bean  p:actionLabel="View Route Log " parent="Uif-ActionLink"  /> 																					    
					<bean  p:actionLabel="Save and Exit" parent="Uif-SecondaryActionButton" p:methodToCall="saveAndExit" /> 					
					<bean  p:actionLabel="Exit without Saving" parent="Uif-SecondaryActionButton"  p:methodToCall="returnToHub" /> 
					<bean parent="Uif-DropdownToggleMenu" p:toggleText="More Actions"  p:align="right">
					  <property name="menuItems">
					    <list>
					      <bean parent="Uif-MenuAction" p:actionLabel="Resend notifications" />		 
					      <bean parent="Uif-MenuAction" p:actionLabel="Reload proposal"  p:methodToCall="reload"/>					 
					      <bean parent="Uif-MenuAction" p:actionLabel="Cancel proposal" p:methodToCall="cancelProposal"/>
						  <bean parent="Uif-MenuDivider"/>
					       <bean parent="Uif-MenuAction" p:actionLabel="Delete Proposal" p:methodToCall="deleteProposal"/>
					    </list>
					  </property>
					 </bean> 
				</list>
			</property>
		</bean> 
	
	 </property>
	</bean>

</beans>